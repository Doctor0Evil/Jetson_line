SECTION,NATURE.FAIRNESS,V1
ROW,ROLE,DIAGNOSTIC-ONLY
ROW,NOACTUATION,TRUE
ROW,NOCAPABILITYWRITE,TRUE
ROW,NOENVELOPEWRITE,TRUE
ROW,LOGSTREAMS,.evolve.jsonl,.donutloop.aln

---- Inputs: per-FateWindow summary ----
ROW,INPUTS,
  FATEWINDOW.ID,
  FATEWINDOW.STATE,
  FATEWINDOW.ROH_MAX,
  FATEWINDOW.ROH_VIOLATION,        -- bool: any RoH > 0.30
  FATEWINDOW.LIFEFORCE_MIN,        -- min lifeforce across governed roles
  FATEWINDOW.LIFEFORCE_FLOOR_CFG,  -- configured minsafe floor
  FATEWINDOW.UNFAIRDRAIN,          -- bool: any UNFAIRDRAIN == true
  FATEWINDOW.ERG,                  -- Environmental Resilience Grade
  FATEWINDOW.ERG_MIN_BAND,         -- lower ERG band
  FATEWINDOW.TECR,                 -- Tree-of-Life Equity Ratio
  FATEWINDOW.TECR_MIN_BAND         -- lower TECR band

---- Derived predicates ----
-- RoH corridor satisfied: Risk-of-Harm stays within 0.0–0.30 and no violation bit is raised.
ROW,PREDICATE,NATURE.FAIRNESS.ROH_OK,
  FATEWINDOW.ROH_VIOLATION == false

-- Lifeforce floor satisfied: no governed role drops below configured minsafe floor.
ROW,PREDICATE,NATURE.FAIRNESS.LIFEFORCE_OK,
  FATEWINDOW.LIFEFORCE_MIN >= FATEWINDOW.LIFEFORCE_FLOOR_CFG

-- No unfair drain: UNFAIRDRAIN must remain false for all protected roles.
ROW,PREDICATE,NATURE.FAIRNESS.UNFAIRDRAIN_OK,
  FATEWINDOW.UNFAIRDRAIN == false

-- Justice metrics corridor: ERG and TECR remain inside configured minimum bands.
ROW,PREDICATE,NATURE.FAIRNESS.ERG_OK,
  FATEWINDOW.ERG   >= FATEWINDOW.ERG_MIN_BAND

ROW,PREDICATE,NATURE.FAIRNESS.TECR_OK,
  FATEWINDOW.TECR  >= FATEWINDOW.TECR_MIN_BAND

-- Conjunction: “NATURE.FAIRNESS” holds only when all sub-conditions are true.
ROW,PREDICATE,NATURE.FAIRNESS,
  NATURE.FAIRNESS.ROH_OK        &&
  NATURE.FAIRNESS.LIFEFORCE_OK  &&
  NATURE.FAIRNESS.UNFAIRDRAIN_OK &&
  NATURE.FAIRNESS.ERG_OK        &&
  NATURE.FAIRNESS.TECR_OK

---- Invariants ----
-- This section is strictly observer-tier and must never appear as a guard in capability or device logic.
ROW,INVARIANT,DIAGNOSTIC-ONLY,
  ROLE == DIAGNOSTIC-ONLY &&
  NOACTUATION == TRUE &&
  NOCAPABILITYWRITE == TRUE &&
  NOENVELOPEWRITE == TRUE

ROW,INVARIANT,NO-CAP-GUARD,
  FORBID_SYMBOL_IN,KERNEL.GUARDS,NATURE.FAIRNESS

ROW,INVARIANT,NO-CAP-GUARD-UNFAIRDRAIN,
  FORBID_SYMBOL_IN,KERNEL.GUARDS,FATEWINDOW.UNFAIRDRAIN

ROW,INVARIANT,NO-CAP-GUARD-ERG-TECR,
  FORBID_SYMBOL_IN,KERNEL.GUARDS,FATEWINDOW.ERG,FATEWINDOW.TECR

---- Serialization contract ----
ROW,OUTPUTS,
  NATURE.FAIRNESS,
  NATURE.FAIRNESS.ROH_OK,
  NATURE.FAIRNESS.LIFEFORCE_OK,
  NATURE.FAIRNESS.UNFAIRDRAIN_OK,
  NATURE.FAIRNESS.ERG_OK,
  NATURE.FAIRNESS.TECR_OK

ROW,EVOLVE.JSONL.MAP,
  FIELD,nature_fairness,
  SOURCE,NATURE.FAIRNESS

ROW,EVOLVE.JSONL.MAP,
  FIELD,nature_fairness_components,
  SOURCE,
    NATURE.FAIRNESS.ROH_OK,
    NATURE.FAIRNESS.LIFEFORCE_OK,
    NATURE.FAIRNESS.UNFAIRDRAIN_OK,
    NATURE.FAIRNESS.ERG_OK,
    NATURE.FAIRNESS.TECR_OK

ROW,DONUTLOOP.ALN.MAP,
  SECTION,NATURE.FAIRNESS.SUMMARY,
  FIELDS,
    FATEWINDOW.ID,
    NATURE.FAIRNESS,
    NATURE.FAIRNESS.ROH_OK,
    NATURE.FAIRNESS.LIFEFORCE_OK,
    NATURE.FAIRNESS.UNFAIRDRAIN_OK,
    NATURE.FAIRNESS.ERG_OK,
    NATURE.FAIRNESS.TECR_OK
